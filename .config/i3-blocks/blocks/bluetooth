      dunstify -t 1675 -h string:fgcolor:#FFFFFF -h string:bgcolor:#11119F "ïŠ” BTManager"

      blueberry
# Right click
elif [[ "${BLOCK_BUTTON}" -eq 3 ]]; then
        termite -e "/home/fz/.scripts/bluetooth.sh"
