#!/bin/bash

STATUS=$(rfkill list 1 | grep -wo 'no')

if [[ "${STATUS}" != "no" ]]; then
        echo "ON"
else
        echo "OFF"
        echo "OFF"
        echo ""
fi


# Left click
if [[ "${BLOCK_BUTTON}" -eq 1 ]]; then
      dunstify -t 1675 -h string:fgcolor:#FFFFFF -h string:bgcolor:#11119F "ïŠ” BTManager" && blueberry

# Right click
elif [[ "${BLOCK_BUTTON}" -eq 3 ]]; then
        termite -e "/home/fz/.scripts/bluetooth.sh"
fi
