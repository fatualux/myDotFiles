#Conky configuration file

background=yes

use_xft=yes
xftfont="Xolonium:size=8"
uppercase=yes

update_interval=1

total_run_times=0

own_window=yes
own_window_type=override
own_window_transparent=yes
own_window_colour=000000
own_window_hints=undecorated,sticky,skip_taskbar,skip_pager,below

double_buffer=yes

minimum_size=750,1000
maximum_width=1280

alignment=top_left

gap_x=0
gap_y=0

default_color=white
default_shade_color=white
default_outline_color=black

color0=FFFFFF
color1=F5F5F5
color2=A2AEC6
color3=669988
color4=AAFF99
color5=649595
color6=879995
color7=000000
color8=339955
color9=464749

draw_borders=no
draw_graph_borders=no
stippled_borders=8
border_width=1

draw_shades=no

draw_outline=no

use_spacer=none

no_buffers=yes

cpu_avg_samples=2
net_avg_samples=2

TEXT
${offset=50} $color8 SYSTEM ${hr=2} $color
${offset=10} $color3 Kernel $color6 $sysname$color9 -$color2 $machine
${offset=10} $color3 Version $color6 $kernel
${offset=10} $color3 User $color2 fz on $color6 $nodename
${offset=10} $color3 Date $color2 ${time=%A %d/%m/%y}
${offset=10} $color3 Time $color6 ${time=%k-%M-%S}
${offset=10} $color3 Uptime $color2 $uptime

${voffset=-30}${offset 550}$color8 TOP MONITOR${hr 2}$color

${offset 700}$color3..:NAME:..${alignr}${alignr}..:MEMORY:..      .:PID:.${color}
${offset 700}$color2 1.$color4${top_mem name 1}${alignr}${color}${top_mem cpu 1} ${top_mem mem 1}        $color2 1. $color6${top_mem pid 1}
${offset 700}$color2 2.$color4${top_mem name 2}${alignr}${color}${top_mem cpu 2} ${top_mem mem 2}        $color2 2. $color6${top_mem pid 2}
${offset 700}$color2 3.$color4${top_mem name 3}${alignr}${color}${top_mem cpu 3} ${top_mem mem 3}        $color2 3. $color6${top_mem pid 3}
${offset 700}$color2 4.$color4${top_mem name 4}${alignr}${color}${top_mem cpu 4} ${top_mem mem 4}        $color2 4. $color6${top_mem pid 4}
${offset 700}$color2 5.$color4${top_mem name 5}${alignr}${color}${top_mem cpu 5} ${top_mem mem 5}        $color2 5. $color6${top_mem pid 5}
${offset 700}$color2 6.$color4${top_mem name 6}${alignr}${color}${top_mem cpu 6} ${top_mem mem 6}        $color2 6. $color6${top_mem pid 6}
${offset 700}$color2 7.$color4${top_mem name 7}${alignr}${color}${top_mem cpu 7} ${top_mem mem 7}        $color2 7. $color6${top_mem pid 7}
${offset 700}$color2 8.$color4${top_mem name 8}${alignr}${color}${top_mem cpu 8} ${top_mem mem 8}        $color2 8. $color6${top_mem pid 8}
${offset 700}$color2 9.$color4${top_mem name 9}${alignr}${color}${top_mem cpu 9} ${top_mem mem 9}        $color2 9. $color6${top_mem pid 9}



${voffset -120}${offset 200}$color8..:$color3  Core 01 $color8:.. $color
${offset 100}$color2 Temperature :$color4 ${execi 30 sensors | grep "Core 0" | cut -d "+" -f2 | cut -c1-6}  -  $color2 Frequency : $color4${freq 1}$color2 MHz
${offset 100}$color2 Load: $color9 ${cpubar cpu1 6,220} $color4${cpu cpu1}$color2 %
${offset 100}$color4 ${cpugraph cpu1 15,255 262729 87CEFA}
${offset 200}$color8..:$color3  Core 02 $color8:.. $color
${offset 100}$color2 Temperature :$color4 ${execi 30 sensors | grep "Core 1" | cut -d "+" -f2 | cut -c1-6}  -  $color2 Frequency : $color4${freq 2}$color2 MHz
${offset 100}$color2 Load: $color9 ${cpubar cpu2 6,220} $color4${cpu cpu2}$color2 %
${offset 100}$color4 ${cpugraph cpu2 15,255 262729 87CEFA}

${voffset -20}${offset 600}$color8 NETWORK${hr 2}$color
${if_up wlan0}
${offset 980}$color2 essid : $color4${wireless_essid wlan0}$color2
${offset 1000}$color2 IPv4 : $color4${addr wlan0}
${offset 1020}$color2 MAC : $color4${wireless_ap wlan0}
${offset 1050}$color2 Down : $color4 ${downspeed wlan0} $color2
${offset 1030}$color4 ${downspeedgraph wlan0 15,250 262729 87CEFA}
${offset 1075}$color2 Up : $color4 ${upspeed wlan0} $color2
${offset 1030}$color4 ${upspeedgraph wlan0 15,250 262729 87CEFA}
${voffset -137}
${endif}${if_up wlan1}
${offset 680}$color2 essid : $color4${wireless_essid wlan1}$color2
${offset 700}$color2 IPv4 : $color4${addr wlan1}
${offset 720}$color2 MAC : $color4${wireless_ap wlan1}
${offset 750}$color2 Down : $color4 ${downspeed wlan1} $color2
${offset 730}$color4 ${downspeedgraph wlan1 15,250 262729 87CEFA}
${offset 775}$color2 Up : $color4 ${upspeed wlan1} $color2
${endif}

${voffset -10}${offset 300}$color8 ..: $color3 Power$color8 :..
${offset 300}$color2 BATTERY $color4  $battery
${offset 300}$color2 Time Left :$color4  $battery_time
${offset 300}$color9 ${battery_bar 6,160}

${voffset 40}${offset 320}$color8 MEMORY${hr 2}$color
${voffset 70}${offset 170}$color8 ..: $color3 Volumes$color8 :..
${offset 70}$color2 Root ${fs_size /}: $color4 ${fs_used_perc /}% (${fs_used /}) used <<>> ${fs_free /} free
${offset 60}$color9 ${fs_bar 6,320 /}
${offset 50}$color2 Home ${fs_size /home}:  $color4 ${fs_used_perc /home}% (${fs_used /home}) used <<>> ${fs_free /home} free
${offset 40}$color9 ${fs_bar 6,320 /home}

${voffset -150}${offset 385}$color2 RAM: ${offset 0} $color9 ${membar 9,200}$color4 $mem ($memperc%)
${offset 410}$color2 Swap: $color9 ${swapbar 9,200}$color4 $swap ($swapperc%)

${voffset -30}${offset 1050}$color8 ..: $color3 Activity$color8 :..
${offset 1050}$color2 Read/Write: $color4 $diskio
${offset 1050}$color2 Process :$color4 $running_processes$color2 /$color4 $processes
${offset 1050}$color6 ${top name 1}$alignr $color4 ${top cpu 1}%
${offset 1050}$color5 ${top name 2}$alignr $color4 ${top cpu 2}%
${offset 1050}$color5 ${top name 3}$alignr $color4 ${top cpu 3}%
${offset 1050}$color5 ${top name 4}$alignr $color4 ${top cpu 4}%
${offset 1050}$color5 ${top name 5}$alignr $color4 ${top cpu 5}%
${offset 1050} ${diskiograph 15,180 262729 87CEFA}
