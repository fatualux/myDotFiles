xterm*background: #000000
xterm*foreground: #55FF99
xterm*cursorColor:#33FF99

XTerm*transparent: true

!xterm*pointerShape:arrow
xterm*faceName:Terminus:style=Regular:size=11
xterm*dynamicColors:true
xterm*utf8:2
xterm*eightBitInput:true
xterm*saveLines:4096
xterm*scrollKey:false
xterm*scrollTtyOutput:false
xterm*scrollBar:false
xterm*rightScrollBar:false
xterm*jumpScroll:true
xterm*multiScroll:true
xterm*toolBar:false
xterm*locale:false
xterm*termName:xterm-256color
xterm*metaSendsEscape:true
XTerm*selectToClipboard: true
xterm*VT100.Translations: #override
                 Shift <Key>Insert:    insert-selection(SELECT) \n
                 Ctrl <Key>Insert:     copy-selection(SELECT) \n
                 Ctrl Shift <Key>V:    insert-selection(SELECT) \n
                 Ctrl Shift <Key>C:    copy-selection(SELECT) \n